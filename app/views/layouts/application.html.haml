!!!
%html
  %head
    %title Railsgirls
    %link{href: "//railsgirls.com/assets/bootstrap.css", rel: "stylesheet"}/
    %link{href: "//railsgirls.com/assets/bootstrap-theme.css", rel: "stylesheet"}/
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: user_signed_in? ? "/ideas" : "/"} Home
        .collapse.navbar-collapse
          - if user_signed_in?
            %ul.nav.navbar-nav
              %li= link_to 'My ideas', my_ideas_path
              %li= link_to 'About', projects_path
            %ul.nav.navbar-nav.pull-right
              %li= link_to current_user.email, current_user
              %li= link_to 'Edit profile', edit_user_registration_path
              %li= link_to "Logout", destroy_user_session_path, method: :delete

    .container
      - if notice
        %p.alert.alert-notice
          = notice
      - if alert
        %p.alert.alert-error
          = alert

    .container
      = yield
    %footer
      .container
        Roberts Eihmanis
    %script{src: "//railsgirls.com/assets/bootstrap.js"}
